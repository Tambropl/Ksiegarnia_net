@page
@model BookShoppingCartMvcUI.Pages.Admin.AddBookModel
@{
    ViewData["Title"] = "Dodaj ksiązke";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Book.BookName" class="control-label"></label>
                <input asp-for="Book.BookName" class="form-control" />
                <span asp-validation-for="Book.BookName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.AuthorName" class="control-label"></label>
                <input asp-for="Book.AuthorName" class="form-control" />
                <span asp-validation-for="Book.AuthorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.GenreId" class="control-label"></label>
                <select asp-for="Book.GenreId" asp-items="new SelectList(Model.Genres, nameof(Genre.Id), nameof(Genre.GenreName))" class="form-control">
                    <option value="">-- Select Genre --</option>
                </select>
                <span asp-validation-for="Book.GenreId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.Image" class="control-label"></label>
                <input asp-for="Book.Image" class="form-control" />
                <span asp-validation-for="Book.Image" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Add Book</button>
        </form>
    </div>
</div>
